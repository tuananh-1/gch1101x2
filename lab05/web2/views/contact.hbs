<div class="container text-center card">
   <form action="/message" method="post">
      <h1 class="text-center text-primary mt-3">Contact Us</h1>
      <div class="form-group mt-2 mb-3">
         <div class="row">
            <div class="col-1"><i class="bi bi-person-circle"></i></div>
            <div class="col-11"><input class="form-control" type="text" name="firstname" required
                  placeholder="First name">
            </div>
         </div>
      </div>
      <div class="form-group mb-3">
         <div class="row">
            <div class="col-1"><i class="bi bi-person-circle"></i></div>
            <div class="col-11"><input class="form-control" type="text" name="lastname" required
                  placeholder="Last name">
            </div>
         </div>
      </div>
      <div class="form-group mb-3">
         <div class="row">
            <div class="col-1"><i class="bi bi-envelope"></i></div>
            <div class="col-11"><input class="form-control" type="email" name="email" required placeholder="Email">
            </div>
         </div>
      </div>
      <div class="form-group mb-3">
         <div class="row">
            <div class="col-1"><i class="bi bi-phone"></i></div>
            <div class="col-11"><input class="form-control" type="tel" name="phone" required placeholder="Phone">
            </div>
         </div>
      </div>
      <div class="form-group mb-3">
         <div class="row">
            <div class="col-1"><i class="bi bi-chat-left-dots"></i></div>
            <div class="col-11"><input class="form-control" type="text" name="message" required placeholder="Message">
            </div>
         </div>
      </div>
      <div class="form-group mb-3">
         <input class="btn btn-primary" type="submit" value="SEND">
      </div>
   </form>
</div>