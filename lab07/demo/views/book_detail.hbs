<div class="container text-center">
   {{!-- div.row>div.col*2 --}}
   <div class="row">
      <div class="col">
         <h4>{{ book.title }}</h4>
         <iframe width="420" height="315" src="https://www.youtube.com/embed/{{ book.video }}">
         </iframe>
      </div>
      <div class="col">
         {{!-- table>tr*5>th+td --}}
         <table class="table table-bordered">
            <tr class="col bg-warning">
               <th colspan="2">Book Info</th>
            </tr>
            <tr>
               <th>Book Author</th>
               <td>{{ book.author }}</td>
            </tr>
            <tr>
               <th>Book Price</th>
               <td>${{ book.price }}</td>
            </tr>
            <tr>
               <th>In stock</th>
               <td>{{ book.quantity }}</td>
            </tr>
            <tr>
               <th>Publishing Date</th>
               <td>{{ dateFormat book.date "DD/MM/YYYY" }}</td>
            </tr>
            <tr>
               <th class="bg-light" colspan="2">
                  <form action="#" method="post">
                     <input type="number" min="1" max="{{ book.quantity }}">
                     <a class="btn btn-primary" href="#">Order</a>
                  </form>
               </th>
            </tr>
         </table>
      </div>
   </div>
</div>